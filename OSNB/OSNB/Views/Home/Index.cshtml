@model OSNB.ViewModels.HomePageViewModel
@{
    ViewBag.Title = "Home Page";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div id="homePage" class="row-fluid">
    <div id="homePageMapZone">
        <div class="switch-board clearfix">
            <div class="span4">
                <img src="../../Content/Images/App/dhakacity.png" usemap="#green" border="0">
                <map name="green">
                    <area shape="rect" coords="19,44,45,11,87,37,82,76,49,98" href="/Home/ZoneDetails/mirpur">
                    <area shape="rect" coords="128,132,241,179" href="/Home/ZoneDetails/mirpur">
                    <area shape="rect" coords="19,44,45,11,87,37,82,76,49,98" href="/Home/ZoneDetails/mirpur">
                    <area shape="rect" coords="128,132,241,179" href="/Home/ZoneDetails/mirpur">
                    <area shape="rect" coords="19,44,45,11,87,37,82,76,49,98" href="/Home/ZoneDetails/mirpur">
                    <area shape="rect" coords="128,132,241,179" href="/Home/ZoneDetails/mirpur">
                    <area shape="circle" coords="68,211,35" href="/Home/ZoneDetails/mirpur">
                </map>
            </div>
            <div class="span4">
                <h4>
                    City Zone</h4>
                <div id="cityZoneList">
                    <ul>
                        @foreach (var cZ in Model.MemberZoneViewModels)
                        {
                            <li><a href="#" class="lnkCityZone-@cZ.Id">@cZ.ZoneName</a></li>
                        }
                    </ul>
                </div>
            </div>
            <div class="span4">
                <h4>
                    Blood Group</h4>
                <div id="bloodGroupList">
                    <ul>
                        @foreach (var bG in Model.MemberBloodGroupViewModels)
                        {
                            <li><a href="#" class="lnkBloodGroup-@bG.Id">@bG.BloodGroupName</a></li>
                        }
                    </ul>
                </div>
            </div>
        </div>
    </div>
    <div class="clearfix">
    </div>
    <div id="homePageBloodRequestZone">
        <div class="board-widgets clearfix">
            <div class="board-widgets-head clearfix">
                <h4 class="pull-left">
                    Current Request for Blood
                </h4>
            </div>
            <div class="board-widgets-content">
                <table id="homePageBloodRequestDataTable" class="table table-bordered table-hover">
                    <tbody>
                    </tbody>
                </table>
