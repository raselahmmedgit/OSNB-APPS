@model OSNB.ViewModels.LogOnViewModel
@{
    ViewBag.Title = "Log On";
}
<div class="row-fluid">
    <div class="span12">
        <h3>
            Log On
        </h3>
    </div>
</div>
<div class="row-fluid">
    <div class="span12">
        <p>
            Please enter your user name and password. @Html.ActionLink("Register", "Register")
            if you don't have an account.
        </p>
    </div>
</div>
@using (Html.BeginForm())
{
    @Html.ValidationSummary(true, "Login was unsuccessful. Please correct the errors and try again.")
    <div class="row-fluid">
        <fieldset>
            <legend>Account Information</legend>
            <div class="span12">
                @Html.LabelFor(model => model.UserName)
                @Html.TextBoxFor(m => m.UserName)
                @Html.ValidationMessageFor(m => m.UserName)
            </div>
            <div class="span12">
                @Html.LabelFor(model => model.Password)
                @Html.PasswordFor(x => x.Password)
                @Html.ValidationMessageFor(x => x.Password)
            </div>
            <div class="span12">
                @Html.CheckBoxFor(m => m.RememberMe)
                @Html.LabelFor(m => m.RememberMe)
            </div>
        </fieldset>
    </div>
    <br />
    <div class="row-fluid span12">
        <div class="span3">
            <button type="submit" id="btnUserSubmit" name="btnUserSubmit" class="btn btn-success btn-small">
                <icon class="icon-hdd icon-white"></icon>
                Log On</button>
        </div>
    </div>

}
