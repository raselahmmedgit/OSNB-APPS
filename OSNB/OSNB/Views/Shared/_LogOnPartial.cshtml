@if (Request.IsAuthenticated)
{
    <text>Welcome <strong>@User.Identity.Name</strong>! @Html.ActionLink("Log Off", "LogOff", "Account", null, new { @class = "btn" })
    </text>
}
else
{
    @: @Html.ActionLink("Register", "Register", "Account", null, new { @class = "btn" })&nbsp;&nbsp;&nbsp;@Html.ActionLink("Log On", "LogOn", "Account", null, new { @class = "btn" })
}
