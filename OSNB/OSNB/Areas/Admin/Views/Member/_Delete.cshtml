@model OSNB.ViewModels.MemberViewModel
@using (Ajax.BeginForm("Delete", "Member", null,
            new AjaxOptions
            {
                UpdateTargetId = "updateTargetId",
                InsertionMode = InsertionMode.Replace,
                HttpMethod = "POST",
                OnSuccess = "DeleteMemberSuccess",
            }, new { @id = "deleteMemberForm" }))
{  
    @Html.ValidationSummary(true)
    
    <div id="memberDeletePage">
        <!-- Error Container -->
        <div class="row-fluid">
            <div class="span12">
                <div id="updateTargetId" class="error">
                </div>
            </div>
        </div>
        <div class="row-fluid">
            @Html.HiddenFor(model => model.MemberId)
            Do you want to delete this member ?
        </div>
    </div>
}
