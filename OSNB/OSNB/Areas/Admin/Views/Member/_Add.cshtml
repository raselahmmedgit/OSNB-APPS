@model OSNB.ViewModels.MemberViewModel
@using (Ajax.BeginForm("Add", "Member", null,
        new AjaxOptions
        {
            UpdateTargetId = "updateTargetId",
            InsertionMode = InsertionMode.Replace,
            HttpMethod = "POST",
            OnSuccess = "AddMemberSuccess",
        }, new { @id = "addMemberForm" }))
{
    <div id="memberAddPage">
        @Html.ValidationSummary(true)
        <!-- Error Container -->
        <div class="row-fluid">
            <div class="span12">
                <div id="updateTargetId" class="error">
                </div>
            </div>
        </div>
        <!-- FirstName -->
        <div class="row-fluid">
            <div class="span4">
                <div class="control-label">
                    @Html.LabelFor(model => model.FirstName)
                </div>
            </div>
            <div class="span8">
                @Html.TextBoxFor(x => x.FirstName)
            </div>
            @Html.ValidationMessageFor(x => x.FirstName)
        </div>
        <!-- FirstName -->
        <div class="row-fluid">
            <div class="span4">
                <div class="control-label">
                    @Html.LabelFor(model => model.LastName)
                </div>
            </div>
            <div class="span8">
                @Html.TextBoxFor(x => x.LastName)
            </div>
            @Html.ValidationMessageFor(x => x.LastName)
        </div>
        <!-- Address -->
        <div class="row-fluid">
            <div class="span4">
                <div class="control-label">
                    @Html.LabelFor(model => model.Address)
                </div>
            </div>
            <div class="span8">
                @Html.TextAreaFor(x => x.Address)
            </div>
            @Html.ValidationMessageFor(x => x.Address)
        </div>

    </div>
}
