@model OSNB.ViewModels.MemberDistrictViewModel
@using (Ajax.BeginForm("Edit", "MemberDistrict", null,
        new AjaxOptions
        {
            UpdateTargetId = "updateTargetId",
            InsertionMode = InsertionMode.Replace,
            HttpMethod = "POST",
            OnSuccess = "EditMemberDistrictSuccess",
        }, new { @id = "editMemberDistrictForm" }))
{
    <div id="memberDistrictEditPage">
        @Html.ValidationSummary(true)
        <!-- Error Container -->
        <div class="row-fluid">
            <div class="span12">
                <div id="updateTargetId" class="error">
                </div>
            </div>
        </div>
        <!-- DistrictName -->
        <div class="row-fluid">
            <div class="span4">
                <div class="control-label">
                    @Html.LabelFor(model => model.DistrictName)
                </div>
            </div>
            <div class="span8">
                @Html.TextBoxFor(x => x.DistrictName)
                @Html.HiddenFor(x => x.Id)
            </div>
            @Html.ValidationMessageFor(x => x.DistrictName)
        </div>
    </div>
}
