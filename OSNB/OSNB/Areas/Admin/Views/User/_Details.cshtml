@model OSNB.ViewModels.UserViewModel
<div id="userDetailsPage">
    <!-- UserName -->
    <div class="row-fluid">
        <div class="span4">
            <div class="control-label">
                @Html.LabelFor(model => model.UserName)
            </div>
        </div>
        <div class="span8">
            @Html.DisplayFor(x => x.UserName)
        </div>
    </div>
    <!-- Email -->
    <div class="row-fluid">
        <div class="span4">
            <div class="control-label">
                @Html.LabelFor(model => model.Email)
            </div>
        </div>
        <div class="span8">
            @Html.DisplayFor(x => x.Email)
        </div>
    </div>
    <!-- RoleName -->
    <div class="row-fluid">
        <div class="span4">
            <div class="control-label">
                @Html.LabelFor(model => model.RoleName)
            </div>
        </div>
        <div class="span8">
            @foreach (var role in Model.Roles)
            {
                <div class="span3">
                    @role.RoleName
                </div>
            }
        </div>
    </div>
</div>
