@model OSNB.ViewModels.EditUserViewModel
@using (Ajax.BeginForm("Edit", "User", null,
        new AjaxOptions
        {
            UpdateTargetId = "updateTargetId",
            InsertionMode = InsertionMode.Replace,
            HttpMethod = "POST",
            OnSuccess = "EditUserSuccess",
        }, new { @id = "editUserForm" }))
{
    <div id="userAddPage">
        @Html.ValidationSummary(true)
        <!-- Error Container -->
        <div class="row-fluid">
            <div class="span12">
                <div id="updateTargetId" class="error">
                </div>
                @Html.HiddenFor(model => model.UserName)
                @Html.HiddenFor(model => model.Email)
            </div>
        </div>
        <!-- OldPassword -->
        <div class="row-fluid">
            <div class="span4">
                <div class="control-label">
                    @Html.LabelFor(model => model.OldPassword)
                </div>
            </div>
            <div class="span8">
                @Html.PasswordFor(x => x.OldPassword)
            </div>
            @Html.ValidationMessageFor(x => x.OldPassword)
        </div>
        <!-- NewPassword -->
        <div class="row-fluid">
            <div class="span4">
                <div class="control-label">
                    @Html.LabelFor(model => model.NewPassword)
                </div>
            </div>
            <div class="span8">
                @Html.PasswordFor(x => x.NewPassword)
            </div>
            @Html.ValidationMessageFor(x => x.NewPassword)
        </div>
        <!-- ConfirmPassword -->
        <div class="row-fluid">
            <div class="span4">
                <div class="control-label">
                    @Html.LabelFor(model => model.ConfirmPassword)
                </div>
            </div>
            <div class="span8">
                @Html.PasswordFor(x => x.ConfirmPassword)
            </div>
            @Html.ValidationMessageFor(x => x.ConfirmPassword)
        </div>
        <!-- RoleName -->
        <div class="row-fluid">
            @foreach (var role in Model.Roles)
            {
                <div class="span3">
                    <label class="checkbox" for="usr-@role.RoleName">
                        <input type="checkbox" id="usr-@role.RoleName" 
                                   name="RoleName" 
                                   value="@role.RoleName" @(Html.Raw(role.IsAssigned ? "checked=\"checked\"" : ""))  />
                        @role.RoleName
                    </label>
                </div>
            }
        </div>
    </div>
}
