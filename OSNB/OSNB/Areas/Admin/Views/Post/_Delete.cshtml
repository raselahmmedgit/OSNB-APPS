@model OSNB.ViewModels.PostViewModel
@using (Ajax.BeginForm("Delete", "Post", null,
            new AjaxOptions
            {
                UpdateTargetId = "updateTargetId",
                InsertionMode = InsertionMode.Replace,
                HttpMethod = "POST",
                OnSuccess = "DeletePostSuccess",
            }, new { @id = "deletePostForm" }))
{  
    @Html.ValidationSummary(true)
    
    <div id="postDeletePage">
        <!-- Error Container -->
        <div class="row-fluid">
            <div class="span12">
                <div id="updateTargetId" class="error">
                </div>
            </div>
        </div>
        <div class="row-fluid">
            @Html.HiddenFor(model => model.Id)
            Do you want to delete this post ?
        </div>
    </div>
}
