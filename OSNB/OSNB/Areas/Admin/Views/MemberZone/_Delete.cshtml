@model OSNB.ViewModels.MemberZoneViewModel
@using (Ajax.BeginForm("Delete", "MemberZone", null,
            new AjaxOptions
            {
                UpdateTargetId = "updateTargetId",
                InsertionMode = InsertionMode.Replace,
                HttpMethod = "POST",
                OnSuccess = "DeleteMemberZoneSuccess",
            }, new { @id = "deleteMemberZoneForm" }))
{  
    @Html.ValidationSummary(true)
    
    <div id="memberZoneDeletePage">
        <!-- Error Container -->
        <div class="row-fluid">
            <div class="span12">
                <div id="updateTargetId" class="error">
                </div>
            </div>
        </div>
        <div class="row-fluid">
            @Html.HiddenFor(model => model.Id)
            Do you want to delete this member zone ?
        </div>
    </div>
}
